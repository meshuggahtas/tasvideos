@page
@model CreateCategoryModel
@{
	ViewData.SetTitle("Create a New Award Category");
}

<form method="post" enctype="multipart/form-data">
	<row>
		<column md="6">
			<fieldset>
				<label asp-for="Type"></label>
				<select asp-for="Type" asp-items="Model.AvailableAwardTypes"></select>
			</fieldset>
			<fieldset>
				<label asp-for="ShortName"></label>
				<input asp-for="ShortName" />
				<span asp-validation-for="ShortName"></span>
			</fieldset>
			<fieldset>
				<label asp-for="Description"></label>
				<input asp-for="Description" />
				<span asp-validation-for="Description"></span>
			</fieldset>
			<fieldset>
				<div><small>Note: filename will be auto-generated with the pattern {shortname}_xxxx.png</small></div>
				<label asp-for="BaseImage"></label>
				<input asp-for="BaseImage" />
				<span asp-validation-for="BaseImage"></span>
			</fieldset>
			<fieldset>
				<div><small>Unfortunately, we need the higher res images manually uploaded too, for now</small></div>
				<label asp-for="BaseImage2X"></label>
				<input asp-for="BaseImage2X" />
				<span asp-validation-for="BaseImage2X"></span>
			</fieldset>
			<fieldset>
				<div><small>Unfortunately, we need the higher res images manually uploaded too, for now</small></div>
				<label asp-for="BaseImage4X"></label>
				<input asp-for="BaseImage4X" />
				<span asp-validation-for="BaseImage4X"></span>
			</fieldset>
		</column>
	</row>
	<form-button-bar>
		<submit-button save-icon="false"></submit-button>
		<cancel-link asp-page="ListCategories"></cancel-link>
	</form-button-bar>
</form>