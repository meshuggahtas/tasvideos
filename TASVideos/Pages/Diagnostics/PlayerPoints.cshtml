@page "{handler?}"
@model PlayerPointsModel
@{
	ViewData.SetTitle("Player points");
}

<top-button-bar>
	<back-link asp-page="Index"></back-link>
</top-button-bar>
<standard-table>
	<table-head columns="User,Points,Rank"></table-head>
	@foreach (var player in Model.Players.OrderByDescending(p => p.Points))
	{
		<tr>
			<td><profile-link username="@player.UserName"></profile-link></td>
			<td>@Math.Round(player.Points)</td>
			<td>@player.Rank</td>
		</tr>
	}
</standard-table>