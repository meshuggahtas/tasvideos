@page "{id}"
@model DeleteModel
@{
	ViewData.SetTitle($"Delete Submission: {Model.Title}");
}
<form method="post">
	<danger-alert>This action cannot be done, and should only be done if there was a mistake in submission</danger-alert>
	<form-button-bar>
		<submit-button btn-class-override="btn-danger"><i class="fa fa-remove"></i> Delete</submit-button>
		<cancel-link asp-page="/Submissions/View" asp-route-id="@Model.Id"></cancel-link>
	</form-button-bar>
</form>