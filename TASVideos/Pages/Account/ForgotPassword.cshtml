@page
@model ForgotPasswordModel
@{
	ViewData.SetTitle("Forgot your password?");
}

<row>
	<column lg="4">
		<form client-side-validation="true" method="post">
			<fieldset>
				<label asp-for="Email"></label>
				<input asp-for="Email" autocomplete="email" />
				<span asp-validation-for="Email"></span>
			</fieldset>
			<submit-button>Submit</submit-button>
		</form>
	</column>
</row>
