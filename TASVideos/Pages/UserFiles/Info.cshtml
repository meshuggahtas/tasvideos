@page "{id}"
@model InfoModel

@{
	var title = $"User File #{Model.Id}";
	ViewData.SetTitle(title);
	ViewData.SetMetaTags(new MetaTag
	{
		Title = title,
		Description = Model.UserFile.Title
	});
}

<div class="mb-2">
	<a asp-page="/UserFiles/Upload" class="btn btn-primary"><i class="fa fa-upload"></i> Upload</a>
	<a permission="CatalogMovies" asp-page="Catalog" asp-route-id="@Model.Id" class="btn btn-primary">Catalog</a>
	<a asp-page="Index" class="btn btn-secondary float-end">All User Files</a>
</div>

<partial name="_UserFileInfo" model="Model.UserFile" />
