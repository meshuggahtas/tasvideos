@page
@model ErrorModel
@{
	ViewData.SetTitle("System Error");
}
@await Html.RenderWiki(SystemWiki.Error)
<hr />
<h5>@Model.StatusCodeString</h5>
<div condition="!string.IsNullOrEmpty(Model.ExceptionMessage)">
	<span>Exception:</span>
	<pre>@Model.ExceptionMessage.ReplaceLineEndings("\n")</pre>
</div>
<div condition="Model.RecoveredFormData.Count != 0">
	<span>Submitted Form Data:</span>
	<standard-table>
		<thead>
			<tr>
				<th scope="col">Key</th>
				<th scope="col">Value</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var kvp in Model.RecoveredFormData)
			{
			<tr>
				<th scope="row">@kvp.Key</th>
				<td><pre style="white-space: pre-wrap;">@kvp.Value</pre></td>
			</tr>
			}
		</tbody>
	</standard-table>
</div>